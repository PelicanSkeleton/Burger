<h1>Burgers!</h1>

<h2>Burgers That Have Not Been Eaten</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers That Have Been Eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=true}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add A Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Eaten?</label><br>
        <input type="radio" name="devoured" value="1" checked> Eaten!<br>
        <input type="radio" name="devoured" value="0"> Eat!
    </div>

    <button type="submit">Add Burger</button>
</form>